<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.photon.fooddeliverymobil.activity.AddressActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E61E2C"
        android:id="@+id/address_activity_header"
        >

        <TextView
            android:id="@+id/address_activity_txtHeader"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_header"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:textSize="23sp"
            android:textColor="@android:color/white"
            android:shadowColor="@android:color/black"

            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/address_activity_header"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:weightSum="10"
        >

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/address_activity_listView"
            android:layout_weight="9"
            android:layout_margin="15dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            >



            <Button
                android:id="@+id/address_activity_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/btn_continue"
                android:text="@string/address_button"
                android:layout_gravity="right"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:shadowColor="@android:color/holo_red_dark"

                android:textStyle="bold"
                />

        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>
