<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#0C0909"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.photon.fooddeliverymobil.activity.OrderActivity">

    <RelativeLayout
        android:id="@+id/order_activity_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E61E2C"
        >

        <TextView
            android:id="@+id/order_activity_txtHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:clickable="true"
            android:shadowColor="@android:color/black"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="23sp"
            android:textStyle="bold"

            />
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/order_activity_header"
        android:layout_marginTop="15dp"

        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="50dp"
            android:paddingTop="5dp"
            android:shadowColor="@android:color/white"
            android:text="Order Received"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="21sp"


            />


        <TextView
            android:id="@+id/order_activity_orderMessage_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:shadowColor="@android:color/holo_red_dark"
            android:text="Thank You. Your order has been received."
            android:textColor="@android:color/white"
            android:textSize="15sp"
            />


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:weightSum="5"
           android:background="@drawable/table_row_border"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:shadowColor="@android:color/holo_red_dark"
                android:text="Order No :"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/order_activity_orderNo_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_weight="4"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:shadowColor="@android:color/holo_red_dark"
                android:text="20102"
                android:textColor="@android:color/white"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:weightSum="5"
            android:background="@drawable/table_row_border"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:shadowColor="@android:color/holo_red_dark"
                android:text="Order Time :"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/order_activity_orderTime_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textSize="15sp"
                android:shadowColor="@android:color/holo_red_dark"
                android:text="01/01/2016 19:25"
                android:textColor="@android:color/white"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:weightSum="5"
            android:background="@drawable/table_row_border"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:shadowColor="@android:color/holo_red_dark"
                android:text="Total Price :"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/order_activity_orderTotal_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textSize="15sp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:shadowColor="@android:color/holo_red_dark"
                android:text="225 TL"
                android:textColor="@android:color/white"/>
        </TableRow>


    </TableLayout>

</RelativeLayout>